{
    "manifest_version": 3,
    "name": "Elements Counter",
    "version": "1.0",
    "description": "",
    "icons": {
        "128": "./icons/logo_x128.png"
    },
    "action": {
        "default_icon": {
            "128": "./icons/logo_x128.png"
        },
        "default_title": "StartPageCounter",
        "default_popup": "index.html"        
    },
    "host_permissions": [
        "*://*/*"
    ],    
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "./source/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "./source/background.js"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ]
}